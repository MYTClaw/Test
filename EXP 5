SELECT *
FROM EMPLO
WHERE Address LIKE '%BANGALORE%';

SELECT *
FROM EMPLO
WHERE Bdate BETWEEN '01/JAN/1990' AND '31/DEC/1994';

UPDATE EMPLO
SET Salary = Salary * 1.10
WHERE SSN IN (SELECT SSN FROM WORKS_ON12 WHERE Pno = (SELECT PNO FROM PROJECT12 WHERE Pname ='CLOUD'));

SELECT * FROM EMPLO;

SELECT E.Fname, E.Lname, P.Pname
FROM EMPLO E
JOIN WORKS_ON12 W ON E.SSN = W.SSN
JOIN PROJECT12 P ON W.PNO = P.PNO
ORDER BY E.DNO;

SELECT * FROM DEPT_LOCATION12;
UPDATE DEPT_LOCATION12
SET Dloc = 'BELLAIRE';
WHERE DNO IN (SELECT DNO FROM EMPLOYEE WHERE Address LIKE '%BANGALORE');

SELECT * FROM DEPT_LOCATION12;
SELECT * FROM PROJECT12;

UPDATE PROJECT12
SET DNO = 5
WHERE PNO = 103;

SELECT * FROM PROJECT12;

CREATE VIEW WORKSON123 AS
SELECT E.Fname, E.Lname, P.Pname, W.Hours
FROM EMPLOYEE E
JOIN WORKS_ON W ON E.SSN = W.SSN
JOIN PROJECT1 P ON W.Pno = P.PNO;

SELECT * FROM WORKSON123;
